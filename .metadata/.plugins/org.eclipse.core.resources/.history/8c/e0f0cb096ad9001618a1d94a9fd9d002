package com.cursospring.modelo.negocio;

import com.cursospring.modelo.entidades.Usuario;

public class ReglasIdeal {

	public boolean sonIdeales(Usuario elQueBusca, Usuario candidato) {
		return !elQueBusca.equals(candidato) 
				&& !elQueBusca.getGenero().equals(candidato.getGenero())
				&& Math.abs(elQueBusca.getAltura() - candidato.getAltura()) < 0.50 
				&& Math.abs(elQueBusca.getFechaNacimiento().getTime() - candidato.getFechaNacimiento().getTime()) < (10*365*24*60*60*1000);
	}

}
