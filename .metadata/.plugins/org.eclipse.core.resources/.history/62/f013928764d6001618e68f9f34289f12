<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- Emplea en constructor con parametros -->
	<bean id="Pedro" class="com.atsistemas.entidades.Persona">
		<constructor-arg name="nombre" value="Pedro"></constructor-arg>
		<constructor-arg name="pareja" ref="Juan"></constructor-arg>
	</bean>
	
	<bean id="Maria" class="com.atsistemas.entidades.Persona">
		<property name="nombre" value="Maria"></property>
		<property name="pareja" ref="Maria"></property>
	</bean>

	<bean id="Juan" class="com.atsistemas.entidades.Persona">
		<constructor-arg name="nombre" value="Juan"></constructor-arg>
		<constructor-arg name="pareja" ref="Pedro"></constructor-arg>
	</bean>

</beans>
